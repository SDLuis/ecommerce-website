---
import Layout from '../../layouts/Layout.astro'
import ProductDetail from '../../components/productDetail'
import MayLikeComponent from '../../components/maylike';
import { getProduct } from '../../services/products.service'
import { get } from 'http';

export async function getStaticPaths() {
  const products = await getProduct();
  return products.map((p: any, i: any) => {
    return {
      params: { id: p.Product_ID.toString() },
      props: { product: p },
    };
  });
}
const { product } = Astro.props;
const products = await getProduct()
---

<Layout title="Product Details" description="Whatever you want to kwow" >
  <ProductDetail product={product} client:visible />
  <MayLikeComponent products={products} client:visible />
</Layout>
