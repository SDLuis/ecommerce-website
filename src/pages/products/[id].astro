---
import Layout from '../../layouts/Layout.astro'
import PageProductDetails from '../../components/PageProductDetails';
import { getProduct } from '../../services/products.service'

export async function getStaticPaths() {
  const products = await getProduct();
  return products.map((p: any) => {
    return {
      params: { id: p.Product_ID.toString() },
      props: { product: p },
    };
  });
}
const { product } = Astro.props;
const products = await getProduct()
---

<Layout title="Product Details" description="Whatever you want to kwow" >
 <PageProductDetails product={product} products={products} client:visible />
</Layout>
